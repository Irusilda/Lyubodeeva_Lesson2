<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="5"
    android:layout_column="2"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <ImageView
        android:id="@+id/austria_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_austria"
        app:srcCompat="@drawable/austria" />

    <ImageView
        android:id="@+id/poland_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_poland"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/poland" />

    <ImageView
        android:id="@+id/italy_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:background="@drawable/image_background"
        android:scaleType="fitXY"
        android:contentDescription="@string/flag_of_italy"
        app:srcCompat="@drawable/italy" />

    <ImageView
        android:id="@+id/columbia_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_columbia"
        app:srcCompat="@drawable/kolymb" />

    <ImageView
        android:id="@+id/madagascar_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:background="@drawable/image_background"
        android:scaleType="fitXY"
        android:contentDescription="@string/flag_of_madagascar"
        app:srcCompat="@drawable/madagascar" />

    <ImageView
        android:id="@+id/thailand_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_thailand"
        app:srcCompat="@drawable/thailand" />

    <ImageView
        android:id="@+id/denmark_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_denmark"
        app:srcCompat="@drawable/denmark" />

    <ImageView
        android:id="@+id/switzerland_3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:background="@drawable/image_background"
        android:contentDescription="@string/flag_of_switzerland"
        app:srcCompat="@drawable/switzerland" />


</GridLayout>